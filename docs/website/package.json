{
  "name": "@sanomalearning/slds-docs",
  "description": "SLDS Documentation",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git",
    "directory": "docs/website"
  },
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:site": "wireit",
    "build:teaser": "wireit",
    "clean": "wireit",
    "lint": "wireit",
    "lint:scss": "wireit",
    "lint:ts": "wireit",
    "start": "wireit",
    "start:teaser": "wireit",
    "styles:site": "wireit",
    "styles:teaser": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:site",
        "build:teaser"
      ]
    },
    "build:site": {
      "command": "eleventy --config=site.eleventy.cjs",
      "dependencies": [
        "styles:site"
      ]
    },
    "build:teaser": {
      "command": "eleventy --config=teaser.eleventy.cjs",
      "dependencies": [
        "styles:teaser"
      ]
    },
    "clean": {
      "command": "rimraf dist"
    },
    "lint": {
      "dependencies": [
        "lint:scss",
        "lint:ts"
      ]
    },
    "lint:scss": {
      "command": "stylelint \"src/**/*.scss\" --color",
      "files": [
        "../../.stylelintrc.cjs",
        "./stylelintrc",
        "src/**/*.scss"
      ]
    },
    "lint:ts": {
      "command": "eslint --color --ext .ts src",
      "files": [
        "../../.eslintignore",
        "../../.eslintrc.cjs",
        "../../.prettierrc.cjs",
        ".eslintignore",
        ".prettierignore",
        "src/**/*.ts"
      ]
    },
    "start": {
      "command": "eleventy --config=site.eleventy.cjs --serve",
      "service": true,
      "files": [
        "site.eleventy.cjs"
      ],
      "dependencies": [
        {
          "script": "styles:site",
          "cascade": false
        }
      ]
    },
    "start:teaser": {
      "command": "eleventy --config=teaser.eleventy.cjs --serve",
      "service": true,
      "files": [
        "teaser.eleventy.cjs"
      ],
      "dependencies": [
        {
          "script": "styles:teaser",
          "cascade": false
        }
      ]
    },
    "styles:site": {
      "command": "sass src/site:dist/site"
    },
    "styles:teaser": {
      "command": "sass src/teaser:dist/teaser",
      "files": [
        "src/teaser/**/*.scss"
      ]
    }
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "@lit-labs/eleventy-plugin-lit": "^0.2.3",
    "@webcomponents/template-shadowroot": "^0.1.0",
    "html-minifier": "^4.0.0",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.5",
    "rimraf": "^3.0.2",
    "sass": "^1.56.1",
    "slugify": "^1.6.5",
    "wireit": "^0.7.3"
  },
  "dependencies": {
    "elasticlunr": "^0.9.5",
    "lit": "^2.4.1"
  }
}
