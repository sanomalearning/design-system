{
  "name": "@sanomalearning/slds-docs",
  "description": "SLDS Documentation",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git",
    "directory": "docs/website"
  },
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:site": "wireit",
    "build:teaser": "wireit",
    "clean": "wireit",
    "start": "wireit",
    "start:teaser": "wireit",
    "styles:site": "wireit",
    "styles:teaser": "wireit",
    "prettier:write": "prettier --write 'src/**/*'",
    "lint:eslint": "eslint -c .eslintrc.cjs src",
    "lint:scss": "stylelint 'src/**/*.scss' --color",
    "lint": "npm-run-all lint:eslint lint:scss"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:site",
        "build:teaser"
      ]
    },
    "build:site": {
      "command": "eleventy --config=site.eleventy.cjs",
      "dependencies": [
        "styles:site"
      ]
    },
    "build:teaser": {
      "command": "eleventy --config=teaser.eleventy.cjs",
      "dependencies": [
        "styles:teaser"
      ]
    },
    "clean": {
      "command": "rimraf dist"
    },
    "start": {
      "command": "eleventy --config=site.eleventy.cjs --serve",
      "service": true,
      "files": ["site.eleventy.cjs"],
      "dependencies": [
        {
          "script": "styles:site",
          "cascade": false
        }        
      ]
    },
    "start:teaser": {
      "command": "eleventy --config=teaser.eleventy.cjs --serve",
      "service": true,
      "files": ["teaser.eleventy.cjs"],
      "dependencies": [
        {
          "script": "styles:teaser",
          "cascade": false
        }        
      ]
    },
    "styles:site": {
      "command": "sass src/site:dist/site"
    },
    "styles:teaser": {
      "command": "sass src/teaser:dist/teaser",
      "files": [
        "src/teaser/**/*.scss"
      ]
    }
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "eslint": "^8.27.0",
    "eslint-plugin-import": "^2.26.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "wireit": "^0.7.3"
  },
  "dependencies": {
    "@lit-labs/eleventy-plugin-lit": "^0.2.3",
    "@webcomponents/template-shadowroot": "^0.1.0",
    "elasticlunr": "^0.9.5",
    "html-minifier": "^4.0.0",
    "lit": "^2.4.1",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.5",
    "sass": "^1.56.1",
    "slugify": "^1.6.5",
    "stylelint": "^14.14.1",
    "stylelint-prettier": "^2.0.0"
  }
}
