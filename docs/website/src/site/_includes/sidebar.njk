<nav class="ds-sidebar ds-flow--xs">
  {#<h1 class="ds-title">
    <a href="/">design system</a>
  </h1>#}

  <a href="/" class="ds-sidebar__logo"></a>

  {% include "./search.njk" %}

  {% set navPages = collections.all | eleventyNavigation("Pages") %}
  <ul class="ds-list">
    {% for entry in navPages %}
      <li id="{{ entry.url }}" {% if entry.url == page.url %} class="active"{% endif %}>
        <a
          class="ds-link{% if page.url == entry.url %} ds-link--active{% endif %} {% if page.url.includes(entry.url) %} ds-link--active{% endif %}"
          href="{{ entry.url | url }}">{{ entry.title }}</a>
        {% if entry.children | length %}
          <span class="ds-sidebar__arrow {% if page.url == entry.url %} ds-sidebar__arrow--active{% endif %} {% if page.url.includes(entry.url) %} ds-sidebar__arrow--active{% endif %}"></span>
          {#<ul role="list"
              class="ds-sublist {% if page.url.includes(entry.url) %} ds-sublist--active{% endif %} {% if page.url == entry.url %} ds-menu--expanded{% endif %}">
            {% for child in entry.children %}
              <li>
                <a class="ds-link{% if page.url == child.url %} ds-sub-link--active{% endif %}"
                   href="{{ child.url }}">{{ child.title }}</a>
              </li>
            {% endfor %}
          </ul>#}
        {% endif %}
      </li>
      {% if entry.children | length %}
        <ul role="list"
            class="ds-sublist {% if page.url.includes(entry.url) %} ds-sublist--active{% endif %} {% if page.url == entry.url %} ds-menu--expanded{% endif %}">
          {% for child in entry.children %}
            <li>
              <a class="ds-link{% if page.url == child.url %} ds-sub-link--active{% endif %}"
                 href="{{ child.url }}">{{ child.title }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    {% endfor %}
  </ul>

  {#{% include "./theme-switch.njk" %}#}
  <a href="/" class="ds-sidebar__help">Help and feedback</a>
</nav>
