{
  "name": "@slds/sanoma-learning",
  "description": "SLDS Theme for Sanoma Learning",
  "version": "0.0.0",
  "publishConfig": {
    "registry":"https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sanomalearning/design-system.git",
    "directory": "packages/tokens/src/themes/sanoma-learning"
  },
  "scripts": {
    "build": "wireit"
  },
  "wireit": {
    "build": {
      "command": "yarn node --no-warnings ../../../build.js sanoma-learning",
      "files": [
        "../../figma/*.json",
        "../../figma/sanoma-learning/*.json"
      ],
      "output": [
        "*.js",
        "*.json",
        "*.css",
        "*.scss",
        "!fonts.css",
        "!package.json"
      ]
    }
  }
}
