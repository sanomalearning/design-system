{
  "name": "@slds/core",
  "description": "SLDS Core Web Components",
  "version": "0.0.0",
  "publishConfig": {
    "registry":"https://npm.pkg.github.com"
  },
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:scss": "wireit",
    "build:ts": "wireit",
    "docs": "wireit",
    "storybook": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts"
      ]
    },
    "build:scss": {
      "command": "yarn node ../../scripts/package-css.mjs src/styles/shared.scss",
      "files": [
        "../../.stylelintrc.cjs",
        "../../scripts/package-css.mjs",
        "src/**/*.scss"
      ],
      "output": [
        "src/**/*.scss.ts"
      ]
    },
    "build:ts": {
      "command": "tsc -b ./tsconfig.build.json --pretty",
      "clean": "if-file-deleted",
      "dependencies": [
        "build:scss"
      ],
      "files": [
        "src/**/*.ts"
      ]
    },
    "docs": {
      "command": "storybook build -o dist/storybook --quiet",
      "dependencies": [
        "build"
      ]
    },
    "storybook": {
      "command": "storybook dev -p 6006 --quiet"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@mdx-js/react": "^1.6.22",
    "@storybook/addon-a11y": "7.0.0-alpha.34",
    "@storybook/addon-docs": "^7.0.0-alpha.34",
    "@storybook/addon-essentials": "^7.0.0-alpha.34",
    "@storybook/addon-links": "^7.0.0-alpha.34",
    "@storybook/addon-storysource": "7.0.0-alpha.34",
    "@storybook/web-components": "^7.0.0-alpha.34",
    "@storybook/web-components-webpack5": "^7.0.0-alpha.34",
    "babel-loader": "^8.2.5",
    "lit-html": "^2.3.1",
    "storybook": "^7.0.0-alpha.34",
    "typescript": "^4.8.4",
    "wireit": "^0.7.2"
  },
  "dependencies": {
    "lit": "^2.3.1",
    "tslib": "^2.4.0"
  }
}
