{
  "name": "@slds/core",
  "description": "SLDS Core Web Components",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:ts": "wireit",
    "storybook": "npx storybook dev -p 6006",
    "build-storybook": "npx storybook build"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts"
      ]
    },
    "build:ts": {
      "command": "tsc -b ./tsconfig.build.json --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts"
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@mdx-js/react": "^1.6.22",
    "@storybook/addon-docs": "^7.0.0-alpha.33",
    "@storybook/addon-essentials": "^7.0.0-alpha.33",
    "@storybook/addon-links": "^7.0.0-alpha.33",
    "@storybook/web-components": "^7.0.0-alpha.33",
    "@storybook/web-components-webpack5": "^7.0.0-alpha.33",
    "babel-loader": "^8.2.5",
    "lit-html": "^2.3.1",
    "storybook": "future",
    "typescript": "^4.8.3",
    "wireit": "^0.7.1"
  },
  "dependencies": {
    "lit": "^2.3.1",
    "tslib": "^2.4.0"
  }
}
